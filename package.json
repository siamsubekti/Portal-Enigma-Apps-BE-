{
  "name": "ms-enigma-backend",
  "version": "1.0.0",
  "description": "Enigma Portal backend service.",
  "author": "Enigma Portal Developer Team",
  "repository": {
    "type": "git",
    "url": "https://git.sqrtechno.com/enigma-portal/ms-enigma-backend.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "s": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "app-root-dir": "^1.0.2",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "crypto-random-string": "^3.0.1",
    "csurf": "^1.10.0",
    "dotenv": "^8.0.0",
    "express-handlebars": "^3.1.0",
    "express-rate-limit": "^5.0.0",
    "hbs": "^4.0.4",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.26",
    "multer": "^1.4.2",
    "mysql": "^2.17.1",
    "nestjs-redis": "^1.2.1",
    "nodemailer": "^6.3.0",
    "numeral": "^2.0.6",
    "passport": "^0.4.0",
    "passport-cookie": "^1.0.6",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.6",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/ioredis": "^4.0.13",
    "@types/jest": "^23.3.13",
    "@types/lodash": "^4.14.136",
    "@types/md5": "^2.1.33",
    "@types/node": "^10.12.18",
    "@types/passport": "^1.0.0",
    "@types/passport-strategy": "^0.2.35",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "husky": "^3.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
